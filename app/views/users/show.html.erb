 </div>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <%= link_to "New Item", new_user_item_path(@user, @item), class: 'btn btn-success' %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Description</th>
              <th>Days left</th>
              <th>Complete</th>
            </tr>
          </thead>
          <tbody>
            <tr class='js-items'>
              <%= render @items  %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

